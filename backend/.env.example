# Backend Configuration
NODE_ENV=development
BACKEND_PORT=3001

# OMDB API
# Get your key from https://www.omdbapi.com/apikey.aspx
OMDB_API_KEY=
OMDB_API_URL=http://www.omdbapi.com

# Redis Cache (Optional)
# Example: redis://localhost:6379 or redis://user:password@host:port
REDIS_URL=

# Authentication (Local + JWT)
# Generate strong random strings for secrets
JWT_SECRET=default_jwt_secret_change_me
SESSION_SECRET=default_session_secret_change_me
JWT_EXPIRES_IN=7d # Example: 1h, 7d, 30d

# Frontend URL (For potential future redirects, e.g., email verification)
# Example: http://localhost:3000
FRONTEND_URL=

# Logging Level (e.g., error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=debug 